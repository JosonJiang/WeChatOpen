<view>
    <!-- wxp template -->
    <view class="progress-item">
        <i-progress percent="25" _pid="{{_pid}}"></i-progress>
        <i-progress percent="45" status="active" _pid="{{_pid}}"></i-progress>
        <i-progress percent="65" status="wrong" _pid="{{_pid}}"></i-progress>
        <i-progress percent="100" status="success" _pid="{{_pid}}"></i-progress>
        <i-progress percent="25" hide-info="" _pid="{{_pid}}"></i-progress>
    </view>
    <view class="progress-item">
        <i-progress percent="{{ percent }}" status="{{ status }}" _pid="{{_pid}}"></i-progress>
        <i-button bindclick="handleAdd" type="ghost" _pid="{{_pid}}">增加</i-button>
        <i-button bindclick="handleReduce" type="ghost" _pid="{{_pid}}">减少</i-button>
    </view>
</view>